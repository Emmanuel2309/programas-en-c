#include <stdio.h>
#include <math.h>

/* Función matemática.
El programa obtiene el resultado de una función.
OP y T: variables de tipo entero.
RES: variable de tipo real. */
void main(void)
{
    int OP, T; // Declaración de las variables OP y T de tipo entero
    float RES; // Declaración de la variable RES de tipo real (número decimal)
    
    printf("Ingrese la opción del cálculo y el valor entero: "); // Muestra un mensaje para que el usuario ingrese los valores
    scanf("%d %d", &OP, &T); // Lee la opción y el valor entero ingresados por el usuario y los almacena en las variables OP y T
    
    switch (OP) // Comienza el bloque switch para evaluar el valor de la variable OP
    {
        case 1: // Si OP es igual a 1, se realiza la operación T / 5 y se almacena en RES
            RES = T / 5;
            break;
        case 2: // Si OP es igual a 2, se realiza la operación T elevado a la T (T^T) utilizando la función pow() y se almacena en RES
            RES = pow(T, T);
            break;
        case 3: // Si OP es igual a 3 o 4, se realiza la operación 6 * T / 2 y se almacena en RES (ambos casos tienen el mismo resultado)
        case 4:
            RES = 6 * T / 2;
            break;
        default: // Si OP no es igual a ninguna de las opciones anteriores, se asigna el valor 1 a RES
            RES = 1;
            break;
    }
    
    printf("\nResultado: %7.2f", RES); // Muestra el resultado en pantalla con dos decimales
}
