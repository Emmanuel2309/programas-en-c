#include <stdio.h>

/* Asistentes.
El programa, al recibir como datos la matrícula, la carrera, el semestre 
y el promedio de un alumno de una universidad privada, determina si
éste puede ser asistente de su carrera. 
MAT, CAR y SEM: variables de tipo entero.
PRO: variable de tipo real. */
void main(void)
{
    int MAT, CAR, SEM; // Declaración de las variables MAT, CAR y SEM de tipo entero
    float PRO; // Declaración de la variable PRO de tipo real (número decimal)
    
    printf("Ingrese matrícula: "); // Muestra un mensaje para que el usuario ingrese la matrícula
    scanf("%d", &MAT); // Lee la matrícula ingresada por el usuario y la almacena en la variable MAT
    
    printf("Ingrese carrera (1-Industrial 2-Telemática 3-Computación 4-Mecánica): "); // Muestra un mensaje para que el usuario ingrese la carrera
    scanf("%d", &CAR); // Lee la carrera ingresada por el usuario y la almacena en la variable CAR
    
    printf("Ingrese semestre: "); // Muestra un mensaje para que el usuario ingrese el semestre
    scanf("%d", &SEM); // Lee el semestre ingresado por el usuario y lo almacena en la variable SEM
    
    printf("Ingrese promedio: "); // Muestra un mensaje para que el usuario ingrese el promedio
    scanf("%f", &PRO); // Lee el promedio ingresado por el usuario y lo almacena en la variable PRO
    
    switch (CAR) // Comienza el bloque switch para evaluar el valor de la variable CAR (carrera)
    {
        case 1: // Si CAR es igual a 1 (Industrial)
            if (SEM >= 6 && PRO >= 8.5) // Comprueba si el semestre es mayor o igual a 6 y el promedio es mayor o igual a 8.5
                printf("\n%d %d %5.2f", MAT, CAR, PRO); // Muestra la matrícula, carrera y promedio en pantalla
            break;
        case 2: // Si CAR es igual a 2 (Telemática)
            if (SEM >= 5 && PRO >= 9.0) // Comprueba si el semestre es mayor o igual a 5 y el promedio es mayor o igual a 9.0
                printf("\n%d %d %5.2f", MAT, CAR, PRO); // Muestra la matrícula, carrera y promedio en pantalla
            break;
        case 3: // Si CAR es igual a 3 (Computación)
            if (SEM >= 6 && PRO >= 8.8) // Comprueba si el semestre es mayor o igual a 6 y el promedio es mayor o igual a 8.8
                printf("\n%d %d %5.2f", MAT, CAR, PRO); // Muestra la matrícula, carrera y promedio en pantalla
            break;
        case 4: // Si CAR es igual a 4 (Mecánica)
            if (SEM >= 7 && PRO >= 9.0) // Comprueba si el semestre es mayor o igual a 7 y el promedio es mayor o igual a 9.0
                printf("\n%d %d %5.2f", MAT, CAR, PRO); // Muestra la matrícula, carrera y promedio en pantalla
            break;
        default: // Si CAR no es igual a ninguna de las opciones anteriores
            printf("\nError en la carrera"); // Muestra un mensaje de error en pantalla
            break;
    }
}
